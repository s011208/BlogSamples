<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/request_rw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_runtime_permission_request_rw" />

    <Button
        android:id="@+id/request_fine_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_runtime_permission_request_fine_location" />

    <Button
        android:id="@+id/start_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_runtime_permission_start_settings" />
</LinearLayout>